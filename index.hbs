{{!< default}}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{! Widgets }}
            {{> widget}}
        </div>
        <div class="col-md-8">

            {{! The main content area on the homepage }}
            <main class="content" role="main">

                {{! Each post will be output using this markup }}
                {{#foreach posts}}

                <article class="{{post_class}}">
                    <header class="post-header">
                        <div class="post-featured">{{content words="0"}}</div>
                        <div class="post-meta"><h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2><time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished"><i class="fa fa-clock-o"></i> {{date format='dddd, MMMM DD, YYYY'}}</time> {{tags prefix="on "}}</div>
                    </header>
                    <section class="post-excerpt">
                        <p>{{excerpt words="85"}}&hellip;</p>
                    </section>
                    <footer class="post-footer">
                        <div class="pull-right">
                            <a href="{{url}}">Read More</i></a>
                        </div>
                        <div class="clearfix"></div>
                    </footer>
                </article>

                {{/foreach}}

                {{!! After all the posts, we have the previous/next pagination links }}
                <div class="blog-pagination">
                    {{pagination}}
                </div>

            </main>
        </div>
    </div>
</div>