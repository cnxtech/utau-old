{{!< default}}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{! Widgets }}
            {{> widget}}
        </div>
        <div class="col-md-8">
            <main class="content" role="main">

                <article class="{{post_class}}">

                    {{! Everything inside the #post tags pulls data from the post }}
                    {{#post}}
                        <header class="post-header detailed">
                            <div class="post-meta"><h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2><time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished"><i class="fa fa-clock-o"></i> {{date format='dddd, MMMM DD, YYYY'}}</time> {{tags prefix="on "}}</div>
                        </header>

                        <section class="post-content">
                            {{content}}
                        </section>

                        <footer class="post-footer">
                            <div class="clearfix"></div>
                        </footer>

                    {{/post}}

                </article>

            </main>
        </div>
    </div>
</div>
